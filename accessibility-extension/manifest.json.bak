{
  "manifest_version": 3,
  "name": "Accessibility Helper",
  "description": "Text-to-speech, high contrast, text size, and live captions for accessibility",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Accessibility Helper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs", "<all_urls>"],
  "host_permissions": ["<all_urls>"]
}
